@model Lesson
@{
    ViewData["Title"] = "Lesson";
}


<html>
<head>

    <meta charset="utf-8">
    <style>

        body {
            --main-font: 'Roboto', sans-serif;
            --header-font: 'Anton', sans-serif;
            --text-font: Georgia, 'Times New Roman', Times, serif;
            --main-color: #FA9307;
            --light-color: #FA9307;
            --white: #fff;
            --black: #222;
            --gray: #F7F6F6;
            --dark-white: #f5f5f5;
            --shadow: 0px 0px 6px 2px var(--dark-white);
            --space: 15px;
            --screw: 4px;
            --link-color: #FA9307;
            background-color: var(--gray) !important;
            color: var(--black) !important;
        }

        h1, h2, h3, h4, h6, .logo {
            font-family: var(--header-font);
            text-transform: uppercase;
            margin-top: 0;
        }

        p {
            font-family: var(--text-font);
            text-align: justify;
        }

        .logo {
            font-size: 1.6em;
        }

        a {
            color: var(--light-color);
        }

        td {
            color: var(--black);
        }

        .shadow {
            box-shadow: var(--shadow);
        }

        form.controlled > * {
            margin-bottom: var(--space);
        }

        footer {
            background-color: var(--black);
            color: var(--white);
            height: 40px;
            display: flex !important;
            justify-content: center;
            align-items: flex-end;
            box-shadow: var(--shadow);
        }

        .spaced-bottom {
            margin-bottom: var(--space);
        }

        button,
        input[type='submit'],
        input[type='button'] {
            background-color: var(--light-color) !important;
            border-color: var(--main-color) !important;
            color: var(--white) !important;
            border-radius: var(--screw);
        }

        .navbar-brand {
            color: var(--white) !important;
            transition: all .3s;
        }

            .navbar-brand:hover {
                color: var(--link-color) !important;
            }

        .navbar-inverse {
            max-height: 40px;
            box-shadow: var(--shadow);
        }

        .profile .dropdown-toggle {
            color: var(--white) !important;
            max-height: 40px;
            border: 0;
        }

        .dropdown-menu {
            box-shadow: none;
        }

        .profile .dropdown-toggle:hover {
            background-color: var(--black) !important;
        }

        .body-content {
            min-height: calc(100vh - 110px);
        }

        .video {
            margin-left: 25%;
        }

        .lesson {
            background-color: var(--white) !important;
            margin-top: 10px;
            margin-bottom: 10px;
            box-shadow: 0 0 5px;
        }

        .testhref {
            margin-top: 10px;
            margin-bottom: 10px;
            box-shadow: 0 0 5px;
            font-size: 30px;
        }
        .form-group {
            margin-bottom: 20px;
            margin-right: 20px;
            text-align: end
        }
        .info {
            margin-bottom: 20px;
            margin-right: 20px;
            font-size: 15px;
        }
        .titleLesson{
            margin-top:30px;
        }
    </style>
    <script src="https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js"></script>
</head>
<body>
    <div class="container lesson">
        <div class="titleLesson">
            <h2 style="text-align:center"> @Model.TITLE_LESSON</h2>
        </div>
        <div class=" info">
            <p>@Html.Raw(@Model.INFORMATION)</p>
        </div>
        <div class="video">
            <iframe width="560" height="315" src="@Model.VIDEO" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="form-group" >
            <a class="testhref" href="~/Lessons/StartTest/?id=@Model.ID_LESSON">Начать тест</a>
        </div>
    </div>
</body>
</html>